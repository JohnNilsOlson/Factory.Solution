@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3 class="view-title">Dr. Sneuss' Factory</h3>
<hr />
<h4 class="view-title">@Html.Label($"{Model.MachineName}")</h4>
<h4 class="view-title">Edit Machine</h4>
<div class="flex container">
  @using (@Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)
    <div class="form-group">
      @Html.Label("Machine Name")
      @Html.TextBoxFor(model => model.MachineName, new {@class="form-control"})
    </div>
    <input type="submit" value="Apply Changes" class="btn btn-outline-dark" />
  }
</div>