@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h3 class="view-title">Dr. Sneuss' Factory</h3>
<hr />
<h4 class="view-title">Machines</h4>
<h5 class="link">@Html.ActionLink("Add new Machine", "Create")</h5>
<hr />
<div class="flex container">
  @if (Model.Count == 0)
  {
    <h5>None.</h5>
  }
  @foreach (Machine machine in Model)
  {
    <h5 class="link">@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</h5>
  }
</div>